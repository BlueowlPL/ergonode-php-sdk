{
  "name": "wldevs/ergonode-php-sdk",
  "description": "Ergonode PHP SDK",
  "authors": [
    {
      "name": "WLDevs",
      "email": "service@wldevs.com"
    }
  ],
  "type": "library",
  "version": "1.0.0",
  "license": "MIT",
  "require-dev": {
    "phpunit/phpunit": "^9.6"
  },
  "require": {
    "php": "^8.1",
    "guzzlehttp/guzzle": "^7.9",
    "ext-intl": "*"
  },
  "autoload": {
    "psr-4": {
      "Ergonode\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Ergonode\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --testdox",
    "test:unit": "phpunit"
  },
  "config": {
    "optimize-autoloader": true
  }
}
